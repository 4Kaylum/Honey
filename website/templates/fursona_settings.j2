    </select>
    <button type="submit" formmethod="post" formaction="/set_nsfw_fursona_archive">Submit NSFW Fursona Accept Archive Channel</button>
    <input name="guild_id" value="{{ guild.id }}" type="hidden" />
</form>
{% endblock content %}

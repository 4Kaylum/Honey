    </select>
    <button type="submit" formmethod="post" formaction="/set_mute_role">Submit Mute Role</button>
    <input name="guild_id" value="{{ guild.id }}" type="hidden" />
</form>
<form id="roles_to_be_removed" class="boxed">
    <p>Set roles which are removed on mute?</p>
    What roles do you want removed when a user is muted?<br>
    {% for role in guild_roles_test%}
        {% if role[1] %}
            <input type="checkbox" id="{{ role[0].id }}" name="removed_roles_ids" value="{{ role[0].id }}" checked> {{ role[0].name }}<br>
        {% else %}
            <input type="checkbox" id="{{ role[0].id }}" name="removed_roles_ids" value="{{ role[0].id }}"> {{ role[0].name }}<br>
        {% endif %}
        {# <label for="{{ role[0].id }}"> {{ role[0].name }} </label> #}
    {%endfor%}
    <button type="submit" formmethod="post" formaction="/set_roles_to_be_removed">Submit Roles To Be Removed</button>
    <input name="guild_id" value="{{ guild.id }}" type="hidden" />
</form>

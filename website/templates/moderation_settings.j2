{% extends "base.j2" %}

{% block head %}
{% endblock head %}

{% block content %}
<div class="content-header-data">
    <h2>Moderation Settings</h2>
</div>
<form id="verified_role" class="boxed">
    <p>Set verified role (currently {{ verfied_role }})</p>
    What do you want to set the verified role to?<br>
    <select name="verified_role_id">
        {% for role in guild_roles%}
        <option value="{{ role.id }}">{{ role.name }}</option>
        {%endfor%}
    </select>
    <button type="submit" formmethod="post" formaction="/set_verify_role">Submit Verified Role</button>
    <input name="guild_id" value="{{ guild.id }}" type="hidden" />
</form>
<form id="mute_role" class="boxed">
    <p>Set mute role (currently {{ muted_role }})</p>
    What do you want to set the mute role to?<br>
    <select name="muted_role_id">
        {% for role in guild_roles%}
